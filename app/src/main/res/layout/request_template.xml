<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@drawable/greybutton"
    android:id="@+id/reqLayout"
    android:padding="10dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greybutton"
        android:layout_margin="10dp"
        android:elevation="10dp"


        android:padding="10dp"

        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted at: "
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:id="@+id/postTime"

        >

    </TextView>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:src="@drawable/blooddrop"
        android:layout_below="@+id/postTime"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/blooddropimg"
        >

    </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Phone Number"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:layout_below="@id/blooddropimg"
            android:id="@+id/phnReq"
            >

        </TextView>

    <TextView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_below="@+id/postTime"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="XY+"
        android:id="@+id/bloodReq"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:textStyle="bold"


            android:id="@+id/nameReq"
            >

        </TextView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:id="@+id/ageReq"

            >

        </TextView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20dp"
            android:minLines="2"
            android:layout_margin="5dp"
            android:id="@+id/adrsReq"

            >

        </TextView>
        <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:minLines="3"
            android:gravity="bottom"
            android:textStyle="bold"
            android:id="@+id/noteReq"

        >

    </TextView>
    </LinearLayout>


    </RelativeLayout>


</LinearLayout>